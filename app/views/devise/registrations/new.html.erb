<h2>Регистрация</h2>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>



  <div class="row">
    <div class="input-group col-xs-4">
      <%= render partial: 'partials/form_errors', locals: {model: resource}, class: "input-group col-xs-4" %>
    </div>
    <div class="controls">
      <%= f.label :email %>
    </div>
    <div class="input-group col-xs-4">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
    </div>

    <div class="controls">
      <%= f.label :password %>
      <% if @minimum_password_length %>
        <span class="event-info">минимум <%= @minimum_password_length %> символов</span>
      <% end %>
    </div>
    <div class="input-group col-xs-4">
      <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
      <span class="input-group-addon"><i class="glyphicon glyphicon-asterisk"></i></span>
    </div>

    <div class="controls">
      <%= f.label :password_confirmation %>
    </div>
    <div class="input-group col-xs-4">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
      <span class="input-group-addon"><i class="glyphicon glyphicon-asterisk"></i></span>
    </div>

    <div class="actions">
      <%= f.submit "Зарегистрироваться", class: 'btn btn-primary buffer-both' %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
