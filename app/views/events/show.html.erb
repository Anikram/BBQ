<div class="event">

  <div class="event-info row">

    <div class="col-md-12">
      <%= content_tag 'div', '',
                      class: 'event-background',
                      style: "background-image: url(#{asset_path('bbq-pic.jpg')})"
      %>

      <div class="event-info-inner row">
        <div class="col-md-6">
          <div class="event-description">
            <h1><%= @event.title %></h1>
            <h3><%= l @event.datetime, format: :short %></h3>
            <h3>
              <small><%= link_to @event.address, "https://yandex.ru/maps/?text=#{@event.address}" %></small>
            </h3>
            <p><%= @event.description %></p>
          </div>

          <% if current_user_can_edit?(@event) %>
            <div class="form">
              <div class="btn-group">
                  <%= link_to 'Изменить', edit_event_path(@event), class: 'btn btn-primary buffer-bottom' %>
                  <%= link_to 'Удалить', @event, class: 'btn btn-primary buffer-bottom btn-danger', method: :delete, data: {confirm: 'Вы уверены что хотите удалить это событие?'}  %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>